<div class="auth-container">
  <div class="auth-header">
    <img class="auth-logo" src="{{model.logoUrl}}"/>
    <h1>Log in</h1>
    <p>
      Need a Debt Collective account? <a href="/signup">Create an account</a>
    </p>
  </div>
  <div class="auth-form">
    <div class='auth-body'>
      <form id="login-form" method="post">
        <div class="form-group">
          <label for="usernameField">
            Username or Email address
          </label>
          <input type="text" id="usernameField" name="username" class="form-control" placeholder="" >
        </div>

        <div class="form-group">
          <label for="passwordField">
            Password
          </label>
          <input type="text" id="usernameField" name="password" class="form-control" placeholder="">
        </div>
      </form>
    </div>
    <div class="auth-footer">
      <div class="auth-actions">
        <button class="btn btn-action">
          Login
        </button>
      </div>

      <div class="auth-divider">
        <hr />
        <small>
          Or continue with
        </small>
      </div>

      <div class="auth-social-media">
        <button class="btn btn-social facebook" type="button">
          <svg class="fa d-icon d-icon-fab-facebook svg-icon svg-string" xmlns="http://www.w3.org/2000/svg"><use xlink:href="#fab-facebook"></use></svg>
        </button>
        <button class="btn btn-social google_oauth2" type="button">
          <svg class="fa d-icon d-icon-custom-google-oauth2 svg-icon" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 48 48"><defs><path id="a" d="M44.5 20H24v8.5h11.8C34.7 33.9 30.1 37 24 37c-7.2 0-13-5.8-13-13s5.8-13 13-13c3.1 0 5.9 1.1 8.1 2.9l6.4-6.4C34.6 4.1 29.6 2 24 2 11.8 2 2 11.8 2 24s9.8 22 22 22c11 0 21-8 21-22 0-1.3-.2-2.7-.5-4z"></path></defs><clipPath id="b"><use xlink:href="#a" overflow="visible"></use></clipPath><path clip-path="url(#b)" fill="#FBBC05" d="M0 37V11l17 13z"></path><path clip-path="url(#b)" fill="#EA4335" d="M0 11l17 13 7-6.1L48 14V0H0z"></path><path clip-path="url(#b)" fill="#34A853" d="M0 37l30-23 7.9 1L48 0v48H0z"></path><path clip-path="url(#b)" fill="#4285F4" d="M48 48L17 24l-4-3 35-10z"></path></svg>
        </button>
        <button class="btn btn-social twitter" type="button">
          <svg class="fa d-icon d-icon-fab-twitter svg-icon svg-string" xmlns="http://www.w3.org/2000/svg"><use xlink:href="#fab-twitter"></use></svg>
        </button>
      </div>
    </div>
  </div>
</div>
